{
  "name": "zesho-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "ZESHO Educational Platform - Modern resource sharing for students",
  "keywords": [
    "education",
    "platform",
    "react",
    "nodejs",
    "mongodb"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "npx prettier --write .",
    "preview": "vite preview",
    "server": "node server-enhanced.js",
    "server:dev": "nodemon server-enhanced.js",
    "setup-db": "node setup-enhanced-database.js",
    "start": "npm run server",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\""
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.46.2",
    "@fontsource/comfortaa": "^5.0.3",
    "@heroicons/react": "^2.0.18",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.2",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase": "^9.22.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.1",
    "pdfjs-dist": "^3.8.162",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-pdf": "^7.1.2",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.2",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.24",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
